@model Student
<div class="container md-6">
    <form method="post">
    <h2 class="text-warning">Are you sure you want to delete this student?</h2>
    <div>
        <span>FirstName: @Model.FirstName</span>
    </div>
    <div>
        <span>FirstName: @Model.MiddleName</span>
    </div>
    <div>
        <span>FirstName: @Model.LastName</span>
    </div>
    <div>
        <span>FirstName: @Model.Department</span>
    </div>

    <div>
        <input type="hidden" asp-for="Id"/>
        <button class="btn btn-danger" type="submit">Yes, Delete</button>
        <a class="btn btn-info" asp-action="Index">Cancel</a>
    </div>
    </form>
</div>
